INICIO
    @@
        Problema de juros simples
    @@
    FLOAT valor
    FLOAT porct
    FLOAT valorDoJuros
    FLOAT valorComJuros    

    escrevaTexto("Digite um valor em R$")
    leia(valor)

    escrevaTexto("Digite um valor em %")
    leia(porct)

    valorDoJuros = (porct * 100) / valor

    valorComJuros = valorDoJuros + valor


    escrevaTexto("Valor do juros: ")
    imprima(valorDoJuros)
    escrevaTexto("Valor com Juros:")
    imprima(valorComJuros)
    
FIM